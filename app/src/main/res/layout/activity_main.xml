<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    tools:context="cn.ac.iscas.xlab.droidfacedog.MainActivity">

    <LinearLayout
        android:id="@+id/id_linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/function_layout_padding"
        >
        <ImageButton
            android:id="@+id/id_ibt_facedetect"
            android:background="@drawable/face_detect_64x64"
            android:layout_width="@dimen/function_icon_width"
            android:layout_height="@dimen/function_icon_height"/>
        <TextView
            android:text="@string/begin_preview_button"
            android:textSize="@dimen/function_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/function1_select_color"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearlayout2"
        android:layout_toRightOf="@id/id_linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/function_layout_padding"
        >
        <ImageButton
            android:id="@+id/id_ibt_xbot_face"
            android:background="@drawable/xbot_face_64x64"
            android:layout_width="@dimen/function_icon_width"
            android:layout_height="@dimen/function_icon_height"/>
        <TextView
            android:text="@string/begin_xbotface_button"
            android:textSize="@dimen/function_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/function1_select_color"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearlayout3"
        android:layout_below="@id/id_linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/function_layout_padding"
        >
        <ImageButton
            android:id="@+id/id_ibt_vip"
            android:background="@drawable/function_vip_64x64"
            android:layout_width="@dimen/function_icon_width"
            android:layout_height="@dimen/function_icon_height"/>
        <TextView
            android:text="@string/begin_register_button"
            android:textSize="@dimen/function_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/function1_select_color"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_linearlayout4"
        android:layout_toRightOf="@id/id_linearlayout3"
        android:layout_below="@id/id_linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/function_layout_padding"
        >
        <ImageButton
            android:id="@+id/id_ibt_settings"
            android:background="@drawable/function_settings_64x64"
            android:layout_width="@dimen/function_icon_width"
            android:layout_height="@dimen/function_icon_height"/>
        <TextView
            android:text="@string/config_button_text"
            android:textSize="@dimen/function_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/function1_select_color"
            />
    </LinearLayout>
</RelativeLayout>
